<div class="header">
  <h1> Pokestop Suggestion </h1>
  <div class="entry">
    <% if current_user %>
      <%= link_to 'Log Out', logout_path, method: :delete %></li>
    <% else %>
    <p> Join </p>
    <% end %>
  </div>
</div>
<%#= console %>
<div id="map"></div>
<div class="aside">

  <div class="alert alert-js hidden">
  </div>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="manual view">
    <h3> What is this? </h2>
    <p>This is a community made map to map pontential pokestops! </p>
    <p> All map submissions will be made public and easily acessible for everyone. </p>
    <h3> Getting started </h2>
    <p> Just click on the map to start!</p>
    <h3> Guidelines </h2>
    <p>Please read <a href="https://support.ingress.com/hc/en-us/articles/207343987-Candidate-Portal-criteria"> Niantic Guidelines </a> before submiting your request.</p>
  </div>

  <div class="form view hidden">
    <%= form_for Candidate.new, url: {action: "create", :controller=>"candidate"} do |f| %>
      <h2> Submit </h2>
      <h3> Name </h3>
      <%= f.text_field :name, required: true, :maxlength => 20, :minlength => 2, placeholder: "If possible, use a official name." %>

      <h3> Description </h3>
      <%= f.text_area :description, :maxlength => 140, placeholder: "Include a description about the place." %>

      <h3> Image </h3>

      <%= f.file_field :image, required: true %>

      <div class="image-form">
        <%#= f.text_field :remote_image_url, placeholder: "or paste an url here" %>
      </div>

      <%= f.hidden_field :latitude, placeholder: "Click on the map" %>
      <%= f.hidden_field :longitude, placeholder: "Click on the map" %>

      <h3> Comments </h3>

      <%= f.text_area :comment, placeholder: "Tell why this should be a Pokestop. Optional" %>

      <%= f.submit "Send" %>
    <% end %>
  </div>

  <div class="login view hidden">
    <h3> Please login to create and vote on Pokestops </h3>
    <%#= link_to 'Twitter', '/auth/twitter' %>
    <div class="social-container">
      <a href="/auth/facebook"> <img class="social-login" src="<%= image_path 'loginfacebook.png' %>"></a>
    </div>
    <i> Your information (name, image) will remain private until you choose not to, this is necessary to prevent spam. </i>
  </div>

</div>

<div id="footer">
<p>  </p>
</div>
